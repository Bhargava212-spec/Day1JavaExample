package com.pack1;

public class Hands1 {
	public static void main(String[ ] args) {

	      int x = 5;

	      while (x > 1) {

	          x = x + 1;

	          if (x < 3) {

	               System.out.println("small x");

	          }

	      }

	 }
}
output:
small x
-----------------------------------------
